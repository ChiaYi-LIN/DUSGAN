// Not total the same as SRGAN in <Photo-Realistic Single Image Super-Resolution Using a Generative Adversarial Network>
{
  "name": "DUSGAN" //  please remove "debug_" during training
  , "use_tb_logger": true
  , "model":"ntire_ex"
  , "scale": 4
  , "gpu_ids": [0]

  , "datasets": {
    "train": {
      "name": "NTIRE"
      , "mode": "LRHR"
      , "dataroot_HR": "/media/kalpesh/Data/Kalpesh/NTIRE20/HR"
      , "dataroot_LR": "/media/kalpesh/Data/Kalpesh/NTIRE20/LR"
      , "subset_file": null
      , "use_shuffle": true
      , "n_workers": 8
      , "batch_size": 8
      , "HR_size": 196
      , "use_flip": true
      , "use_rot": true
    }
    , "val": {
      "name": "val_NTIRE"
      , "mode": "LRHR"
      , "dataroot_HR": "/media/kalpesh/Data/Kalpesh/NTIRE20/valY"
      , "dataroot_LR": "/media/kalpesh/Data/Kalpesh/NTIRE20/valX"
    }
  }

  , "path": {
    "root": "/media/kalpesh/Data/Kalpesh/NTIRE-Extension/NTIRE Extension Code/"
    //, "resume_state": "/home/user1/Documents/Kalpesh/NTIRE2_Code/experiments/LSGAN_TwoPatchDisc_ExpQA/training_state/181000.state"
    , "pretrain_model_G": null
    , "pretrain_model_Q": "/media/kalpesh/Data/Kalpesh/NTIRE-Extension/NTIRE Extension Code/latest_G.pth"
  }

  , "network_G": {
    "which_model_G": "SRGAN_Gen" // RRDB_net | sr_resnet | SRGANGen
    , "norm_type": null
    , "mode": "CNA"
    , "nf": 64
    , "nb": 20
    , "in_nc": 3
    , "out_nc": 3
  }
  , "network_D": {
    "which_model_D": "discriminator_SRGAN"
    , "norm_type": "batch"
    , "act_type": "leakyrelu"
    , "mode": "CNA"
    , "nf": 64
    , "in_nc": 3
  }

  , "train": {
    "lr_G": 1e-4
    , "weight_decay_G": 0
    , "beta1_G": 0.9
    , "lr_D": 1e-4
    , "weight_decay_D": 0
    , "beta1_D": 0.9
    , "lr_scheme": "MultiStepLR"
    , "lr_steps": [50000, 100000, 150000, 200000,250000,300000]
    , "lr_gamma": 0.5

    , "pixel_criterion": "l1"
    , "pixel_weight": 1
    , "feature_criterion": "l2"
    , "feature_weight": 0
    , "gan_type": "lsgan"
    , "gan_weight": 2e-2
    , "QA_weight": 1e-3

    , "manual_seed": 0
    , "niter": 400000
    , "val_freq": 1000
  }

  , "logger": {
    "print_freq": 100
    , "save_checkpoint_freq": 1000
  }
}
